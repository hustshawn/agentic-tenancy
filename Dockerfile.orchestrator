FROM golang:1.24-alpine AS builder
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o /bin/orchestrator ./cmd/orchestrator

FROM alpine:3.19
RUN apk add --no-cache wget
COPY --from=builder /bin/orchestrator /orchestrator
ENTRYPOINT ["/orchestrator"]
